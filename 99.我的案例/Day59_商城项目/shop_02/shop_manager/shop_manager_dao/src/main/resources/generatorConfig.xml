<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
	<!-- targetRuntime:注意,此处必须指明运行目标的版本,否则会报异常! -->
	<context id="shopTables" targetRuntime="mybatis3">
		<commentGenerator>
			<!-- 是否去除自动生成的注释 true:是;false:否 -->
			<property name="suppressAllComments" value="true" />
		</commentGenerator>

		<!--数据库连接的信息:驱动类、连接地址、用户名、密码 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3306/shop" userId="root"
			password="syc">
		</jdbcConnection>
		<!-- 配置Oracle数据库 -->
		<!-- <jdbcConnection driverClass="oracle.jdbc.OracleDriver" connectionURL="jdbc:oracle:thin:@127.0.0.1:1521:yycg" 
			userId="yycg" password="yycg"> </jdbcConnection> -->

		<!-- 默认false,把JDBC的DECIMAL和 NUMERIC类型解析为Integer,为true时把JDBC的DECIMAL 和 NUMERIC 
			类型解析为java.math.BigDecimal -->
		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!-- targetProject:设置存放生成的PO类的位置 -->
		<javaModelGenerator targetPackage="com.syc.mapper"
			targetProject=".\src\main\java\">
			<!-- enableSubPackages:是否让schema作为包的后缀 -->
			<property name="enableSubPackages" value="false" />
			<!-- 清理从数据库返回值的前后空格 -->
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!-- targetProject:Mapper映射文件生成的位置 -->
		<sqlMapGenerator targetPackage="com.syc.mapper"
			targetProject=".\src">
			<!-- enableSubPackages:是否让schema作为包的后缀 -->
			<property name="enableSubPackages" value="false" />
		</sqlMapGenerator>

		<!-- targetPackage:Mapper接口生成的位置 -->
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="com.syc.mapper" targetProject=".\src">
			<!-- enableSubPackages:是否让schema作为包的后缀 -->
			<property name="enableSubPackages" value="false" />
		</javaClientGenerator>

		<!-- 指定数据库表 -->
		<table tableName="tb_content"/>

		<table tableName="tb_content_category"/>

		<table tableName="tb_item"/>

		<table tableName="tb_item_cat"/>

		<table tableName="tb_item_desc"/>

		<table tableName="tb_item_param"/>

		<table tableName="tb_item_param_item"/>

		<table tableName="tb_order"/>

		<table tableName="tb_order_item"/>

		<table tableName="tb_order_shipping"/>

		<table tableName="tb_user"/>
	</context>
</generatorConfiguration>